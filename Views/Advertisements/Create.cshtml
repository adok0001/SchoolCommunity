@model assignment2.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Upload</h1>

<h2>Upload an add for community @Html.DisplayFor(model => model.Community.Title)</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="btn btn-sm float-left">
                    <input name="file" type="file">
                </div>
            </div>

            <div class="form-group">
                <button name="upload" class="btn btn-primary">Upload Now</button>
            </div>
        </form>
    </div>
    </div>
    <div>
        <a asp-action="Index" asp-route-id="@Model.Community.Id">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
