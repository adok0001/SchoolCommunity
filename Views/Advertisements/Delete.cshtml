@model assignment2.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h2>Delete ad for community @Html.DisplayFor(model => model.Community.Title)</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Advertisement</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            FileName
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ad.FileName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ad.Url)
        </dt>
        <dd class="col-sm-10">
            <img src=@Model.Ad.Url/>            
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-id="@Model.Community.Id">Back to List</a>
    </form>
</div>
