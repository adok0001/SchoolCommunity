<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Students and Commuities</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body>

    <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <a class="navbar-brand" href="/">SchoolCommunity</a>
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Students" asp-action="Index">Students</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Communities" asp-action="Index">Communities</a>
            </li>
        </ul>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>
